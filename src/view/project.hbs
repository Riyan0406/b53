<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #004643">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img
            class=""
            src="/image/3bf826d15ceb64dfc9d3712f5a451838-removebg-preview.png"
            alt=""
            style="width: 35px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active text-light fw-bold"
                style="color: #eaa81b"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                style="color: #eaa81b"
                class="nav-link text-light fw-bold"
                href="/add-project"
              >Add Project</a>
            </li>

            <li class="nav-item">
              <a
                style="color: #eaa81b"
                class="nav-link text-light fw-bold"
                href="/testimonial"
              >My Testimonial</a>
            </li>
          </ul>
        </div>
        <a href="/contact" style="color: #004643"><button
            type="button"
            class="btn"
            ;
            style="background-color: #eaa81b"
          >
            Contact Me
          </button></a>
      </div>
    </nav>

    <form
      onsubmit="addData(event)"
      style="background-color: #9dbc98"
      class="p-1 mx-auto mb-0"
    >
      <h3 class="text-light d-flex justify-content-center mt-3">
        Add My Project
      </h3>
      <div style="width: 50%" class="vanila mx-auto">
        <div class="mb-3">
          <label for="title" class="text-light">Title</label>
          <input
            type="text"
            class="form-control bg-body-secondary"
            name="title"
            id="title"
          />
        </div>
        <div class="mb-3 d-flex">
          <div class="w-50 p-1">
            <label for="start-date" class="form-label text-light">Start Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="startDate"
              id="startdate"
            />
          </div>
          <div class="w-50 p-1">
            <label for="end-date" class="form-label text-light">End Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="endDate"
              id="enddate"
            />
          </div>
        </div>
        <div class="mb-3">
          <label
            for="Description"
            class="form-label text-light"
          >Description</label>
          <textarea
            class="form-control bg-body-secondary"
            name="Description"
            id="descrip"
            style="resize: none; height: 100px"
          ></textarea>
        </div>
        <div class="">
          <label class="text-light" for="Technologies ">Technologies</label>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Node js"
              id="node"
            />
            <label class="text-light" for="node">Node Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Golang"
              id="golang"
            />
            <label class="text-light" for="golang">Golang</label>
          </div>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="React js"
              id="react"
            />
            <label class="text-light" for="react">React Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Java"
              id="java"
            />
            <label class="text-light" for="java">Java</label>
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label text-light mt-2">Upload Image</label>
          <input
            class="form-control form-control-sm bg-body-secondary"
            id="image"
            type="file"
          />
        </div>
        <div class="mt-3 text-end">
          <button
            type="submit"
            class="btn btn-outline-success py-1 text-dark fw-bold mb-5"
            style="background-color: #f9bc60"
          >
            Post Project
          </button>
        </div>
      </div>
    </form>
  </body>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
</html>